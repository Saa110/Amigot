{
  "manifest_version": 3,
  "name": "Amigo Assignment Automator",
  "version": "1.0",
  "description": "Automatically handles Amigo LMS assignments and content navigation",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "https://amigolms.amityonline.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://amigolms.amityonline.com/*"],
      "js": [ "quizHandler.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amigo Automator",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["Database/*"],
      "matches": ["https://amigolms.amityonline.com/*"]
    }
  ]
}
